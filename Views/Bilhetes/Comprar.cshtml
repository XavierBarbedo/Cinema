@model Cinema.Models.Sessao

@{
    ViewData["Title"] = "Comprar Bilhetes";
    var lugaresOcupados = ViewBag.LugaresOcupados as List<string> ?? new List<string>();
}

<div class="container py-5 text-white">
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card bg-dark text-white border-secondary">
                <img src="@Model.Filme.Capa" class="card-img-top" alt="@Model.Filme.Titulo" style="height: 400px; object-fit: cover;">
                <div class="card-body">
                    <h3 class="card-title">@Model.Filme.Titulo</h3>
                    <p><strong>Sala:</strong> @Model.Sala</p>
                    <p><strong>Data:</strong> @Model.DataHora.ToString("dd/MM/yyyy HH:mm")</p>
                    <p><strong>Preço:</strong> @Model.Preco.ToString("C")</p>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card bg-dark text-white border-secondary p-4">
                <h3 class="mb-4">Selecione os seus lugares</h3>
                
                <!-- LEGENDA -->
                <div class="d-flex gap-3 mb-4 justify-content-center">
                    <div class="d-flex align-items-center"><div class="seat seat-available me-2"></div> Livre</div>
                    <div class="d-flex align-items-center"><div class="seat seat-selected me-2"></div> Selecionado</div>
                    <div class="d-flex align-items-center"><div class="seat seat-occupied me-2"></div> Ocupado</div>
                </div>

                <!-- ECRÃ -->
                <div class="screen mb-5">ECRÃ</div>

                <!-- MAPA DE LUGARES -->
                <div class="cinema-room text-center mb-4">
                    @for (char row = 'A'; row <= 'H'; row++) // 8 filas
                    {
                        <div class="seat-row">
                            <span class="row-label">@row</span>
                            @for (int col = 1; col <= 10; col++) // 10 cadeiras por fila
                            {
                                string seatId = $"{row}{col}";
                                bool isOccupied = lugaresOcupados.Contains(seatId);
                                string seatClass = isOccupied ? "seat-occupied" : "seat-available";
                                
                                <div class="seat @seatClass" data-seat="@seatId" onclick="@(!isOccupied ? $"toggleSeat('{seatId}')" : "")">
                                    @col
                                </div>
                            }
                        </div>
                    }
                </div>

                <!-- FORMULÁRIO -->
                <form asp-action="Confirmar" method="post" id="bookingForm" class="mt-4">
                    <input type="hidden" name="sessaoId" value="@Model.Id" />
                    <input type="hidden" name="lugaresSelecionados" id="lugaresInput" />

                    <div class="mb-3">
                        <label class="form-label">Lugares Selecionados:</label>
                        <input type="text" class="form-control bg-secondary text-white border-0" id="displayLugares" readonly placeholder="Nenhum lugar selecionado" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Total:</label>
                        <h4 id="totalPrice" class="text-primary">0,00 €</h4>
                    </div>
                     
                    <div class="mb-4"></div>

                    <button type="submit" class="btn btn-success w-100 py-3 fw-bold" disabled id="btnComprar">CONFIRMAR RESERVA</button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .screen {
        background: linear-gradient(to bottom, #fff, transparent);
        height: 60px;
        width: 100%;
        transform: perspective(300px) rotateX(-10deg);
        box-shadow: 0 20px 50px rgba(255,255,255,0.2);
        display: flex;
        align-items: center;
        justify-content: center;
        color: #000;
        font-weight: bold;
        letter-spacing: 5px;
        border-top: 5px solid #fff;
        border-radius: 10px;
        opacity: 0.8;
    }

    .seat-row {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-bottom: 10px;
        align-items: center;
    }

    .row-label {
        font-weight: bold;
        width: 20px;
        color: #666;
    }

    .seat {
        width: 35px;
        height: 35px;
        background-color: #444;
        border-radius: 6px 6px 10px 10px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.75rem;
        transition: all 0.2s;
        border-bottom: 3px solid #333;
    }

    .seat-available:hover {
        background-color: #666;
        transform: scale(1.1);
    }

    .seat-selected {
        background-color: #0d6efd !important;
        border-bottom-color: #0a58ca !important;
        color: white;
        box-shadow: 0 0 10px #0d6efd;
    }

    .seat-occupied {
        background-color: #dc3545 !important;
        border-bottom-color: #b02a37 !important;
        cursor: not-allowed;
        opacity: 0.5;
    }
</style>

<script>
    const precoPorBilhete = @Model.Preco.ToString(System.Globalization.CultureInfo.InvariantCulture);
    let selectedSeats = [];

    function toggleSeat(seatId) {
        if (selectedSeats.includes(seatId)) {
            selectedSeats = selectedSeats.filter(s => s !== seatId);
            document.querySelector(`[data-seat='${seatId}']`).classList.remove('seat-selected');
        } else {
            if (selectedSeats.length >= 10) {
                alert('Máximo de 10 bilhetes por reserva.');
                return;
            }
            selectedSeats.push(seatId);
            document.querySelector(`[data-seat='${seatId}']`).classList.add('seat-selected');
        }
        updateForm();
    }

    function updateForm() {
        // Ordenar lugares
        selectedSeats.sort();

        // Atualizar inputs
        document.getElementById('lugaresInput').value = selectedSeats.join(',');
        document.getElementById('displayLugares').value = selectedSeats.join(', ');

        // Atualizar total
        const total = selectedSeats.length * precoPorBilhete;
        document.getElementById('totalPrice').innerText = total.toLocaleString('pt-PT', { style: 'currency', currency: 'EUR' });

        // Habilitar botão
        document.getElementById('btnComprar').disabled = selectedSeats.length === 0;
    }
</script>
