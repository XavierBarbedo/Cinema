@model List<Cinema.Models.Filme>

@{
    ViewData["Title"] = "Dashboard de Filmes";
}

<h1 class="mb-4 text-white">Dashboard de Filmes</h1>

<div class="mb-3">
    <a class="btn btn-success" asp-action="Create">Adicionar Novo Filme</a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<style>
    #filmes-table, #filmes-table th, #filmes-table td {
        color: white !important;
    }

        #filmes-table tbody tr:nth-child(odd) {
            background-color: #1a1a1a !important;
        }

        #filmes-table tbody tr:nth-child(even) {
            background-color: #121212 !important;
        }
</style>

<table class="table table-striped table-hover" id="filmes-table">
    <thead class="table-dark">
        <tr>
            <th>Capa</th>
            <th>Título</th>
            <th>Género</th>
            <th>Duração</th>
            <th>Realizador</th>
            <th>Data Lançamento</th>
            <th>Trailer</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var filme in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(filme.Capa))
                    {
                        <img src="@filme.Capa" alt="@filme.Titulo" style="width:50px; height:auto;" />
                    }
                </td>
                <td>@filme.Titulo</td>
                <td>@filme.Genero</td>
                <td>@filme.Duracao min</td>
                <td>@filme.Realizador</td>
                <td>@filme.DataLancamento.ToString("dd/MM/yyyy")</td>
                <td>
                    @if (!string.IsNullOrEmpty(filme.TrailerYoutubeId))
                    {
                        <a href="https://www.youtube.com/watch?v=@filme.TrailerYoutubeId" target="_blank">Ver Trailer</a>
                    }
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-controller="Admin" asp-action="Edit" asp-route-id="@filme.Id">Editar</a>

                        <form asp-action="DeleteConfirmed" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@filme.Id" />
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Tem a certeza que deseja apagar este filme?');">Eliminar</button>
                        </form>
                </td>
            </tr>
        }
    </tbody>
</table>
