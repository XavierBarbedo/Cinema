@model IEnumerable<Cinema.Models.Filme>

@{
    ViewData["Title"] = "Gestão de Filmes";
}

<div class="container py-4">
    <a asp-controller="Admin" asp-action="Home" class="admin-btn-back">
        <i class="fa-solid fa-arrow-left"></i> Voltar ao Painel
    </a>

    <div class="admin-header">
        <h2 class="text-white mb-0">Gestão de Filmes</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fa-solid fa-plus me-2"></i>Novo Filme
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <div class="table-responsive">
        <table class="admin-table">
            <thead>
                <tr>
                    <th>Capa</th>
                    <th>Título</th>
                    <th>Género</th>
                    <th>Data Lançamento</th>
                    <th class="text-end">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="width: 80px;">
                            <img src="@item.Capa" alt="@item.Titulo" style="width: 50px; height: 75px; object-fit: cover; border-radius: 4px;">
                        </td>
                        <td class="fw-bold">@item.Titulo</td>
                        <td><span class="badge bg-secondary">@item.Genero</span></td>
                        <td>@item.DataLancamento.ToShortDateString()</td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-light me-2">
                                <i class="fa-solid fa-pen"></i>
                            </a>
                            <a asp-action="CriarSessao" asp-route-filmeId="@item.Id" class="btn btn-sm btn-outline-info me-2" title="Criar Sessão">
                                <i class="fa-solid fa-clock"></i>
                            </a>
                            <form asp-action="DeleteConfirmed" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirm('Tem a certeza que deseja apagar este filme?');">
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="fa-solid fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
