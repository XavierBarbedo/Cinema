@{
    ViewData["Title"] = "Painel Administrativo";
}

<div class="admin-dashboard">
    <div class="container py-5">
        <div class="d-flex align-items-center mb-5 border-bottom border-dark pb-3">
            <h1 class="display-6 fw-bold text-white me-3">Painel Administrativo</h1>
            <span class="badge bg-primary px-3 py-2 rounded-pill bg-opacity-75">Admin</span>
        </div>

        <div class="row g-4 justify-content-center">
            
            <!-- Gestão de Filmes -->
            <div class="col-md-4">
                <a asp-controller="Admin" asp-action="Filmes" class="text-decoration-none">
                    <div class="admin-card card-filmes">
                        <div class="card-icon">
                            <i class="fa-solid fa-film"></i>
                        </div>
                        <h3 class="card-title">Filmes</h3>
                        <p class="card-desc">Gerir catálogo, adicionar e remover filmes.</p>
                        <div class="card-footer-custom">
                            <span class="btn-text">Aceder</span>
                            <i class="fa-solid fa-arrow-right icon-arrow"></i>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Gestão de Sessões -->
            <div class="col-md-4">
                <a asp-controller="Admin" asp-action="Sessoes" class="text-decoration-none">
                    <div class="admin-card card-sessoes">
                        <div class="card-icon">
                            <i class="fa-regular fa-clock"></i>
                        </div>
                        <h3 class="card-title">Sessões</h3>
                        <p class="card-desc">Programar horários e salas de exibição.</p>
                        <div class="card-footer-custom">
                            <span class="btn-text">Aceder</span>
                            <i class="fa-solid fa-arrow-right icon-arrow"></i>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Gestão de Reservas -->
            <div class="col-md-4">
                <a asp-controller="Admin" asp-action="Reservas" class="text-decoration-none">
                    <div class="admin-card card-reservas">
                        <div class="card-icon">
                            <i class="fa-solid fa-ticket"></i>
                        </div>
                        <h3 class="card-title">Reservas</h3>
                        <p class="card-desc">Consultar e gerir reservas de clientes.</p>
                        <div class="card-footer-custom">
                            <span class="btn-text">Aceder</span>
                            <i class="fa-solid fa-arrow-right icon-arrow"></i>
                        </div>
                    </div>
                </a>
            </div>

        </div>
    </div>
</div>

<style>
    :root {
        --card-bg: #1A1A1A;
        --card-border: #333;
        --card-hover-bg: #222;
        --accent-color: #0d6efd;
        --text-muted: #b0b0b0;
    }

    .admin-dashboard {
        min-height: 80vh;
        font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
    }

    .admin-card {
        background-color: var(--card-bg);
        border: 1px solid var(--card-border);
        border-radius: 16px;
        padding: 40px 30px;
        height: 100%;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        position: relative;
        overflow: hidden;
        cursor: pointer;
    }

    /* Subtle top highlight */
    .admin-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 4px;
        background: linear-gradient(90deg, transparent, var(--accent-color), transparent);
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .admin-card:hover {
        transform: translateY(-8px);
        background-color: var(--card-hover-bg);
        border-color: #555;
        box-shadow: 0 20px 50px rgba(0,0,0,0.5);
    }

    .admin-card:hover::before {
        opacity: 1;
    }

    .card-icon {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        background-color: rgba(255, 255, 255, 0.05);
        color: var(--accent-color);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 28px;
        margin-bottom: 25px;
        transition: all 0.3s ease;
    }

    .admin-card:hover .card-icon {
        background-color: var(--accent-color);
        color: white;
        transform: scale(1.1) rotate(5deg);
    }

    .card-title {
        color: white;
        font-weight: 700;
        font-size: 1.4rem;
        margin-bottom: 15px;
    }

    .card-desc {
        color: var(--text-muted);
        font-size: 0.95rem;
        line-height: 1.5;
        margin-bottom: 30px;
        flex-grow: 1;
    }

    .card-footer-custom {
        margin-top: auto;
        display: flex;
        align-items: center;
        color: var(--accent-color);
        font-weight: 600;
        font-size: 0.9rem;
        opacity: 0.8;
        transition: all 0.3s ease;
    }

    .btn-text {
        margin-right: 8px;
    }

    .icon-arrow {
        transition: transform 0.3s ease;
    }

    .admin-card:hover .card-footer-custom {
        opacity: 1;
        color: white;
    }

    .admin-card:hover .icon-arrow {
        transform: translateX(5px);
    }
</style>
