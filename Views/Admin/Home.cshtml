@{
    ViewData["Title"] = "Painel Administrativo";
}

<div class="admin-container d-flex flex-column min-vh-100 bg-dark text-white py-5" style="border-radius: 5px;">
    <div class="container flex-grow-1">
        <h1 class="mb-5">Painel Administrativo</h1>

        <div class="row g-4">

            <!-- Gestão de Filmes -->
            <div class="col-md-4">
                <a asp-controller="Admin" asp-action="Filmes" class="text-decoration-none">
                    <div class="card text-white bg-primary h-100 shadow-sm">
                        <div class="card-body d-flex flex-column justify-content-center align-items-center">
                            <h4 class="card-title mb-2">Gestão de Filmes</h4>
                            <p class="card-text text-center">Adicionar, editar ou remover filmes no catálogo.</p>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Gestão de Sessões -->
            <div class="col-md-4">
                <a asp-controller="Admin" asp-action="Sessoes" class="text-decoration-none">
                    <div class="card text-white bg-warning h-100 shadow-sm">
                        <div class="card-body d-flex flex-column justify-content-center align-items-center">
                            <h4 class="card-title mb-2">Gestão de Sessões</h4>
                            <p class="card-text text-center">Criar, editar ou remover sessões de filmes.</p>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Gestão de Reservas -->
            <div class="col-md-4">
                <a asp-controller="Admin" asp-action="Reservas" class="text-decoration-none">
                    <div class="card text-white bg-success h-100 shadow-sm">
                        <div class="card-body d-flex flex-column justify-content-center align-items-center">
                            <h4 class="card-title mb-2">Gestão de Reservas</h4>
                            <p class="card-text text-center">Visualizar e administrar reservas de clientes.</p>
                        </div>
                    </div>
                </a>
            </div>

        </div>
    </div>

</div>

<style>
    body {
        background-color: #121212;
        margin: 0;
    }

    .card {
        border-radius: 12px;
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 25px rgba(0, 0, 0, 0.5);
        }

    .admin-container a {
        color: inherit;
    }
</style>
