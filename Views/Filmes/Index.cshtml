@model IEnumerable<Cinema.Models.Filme>

<h1 class="text-3xl mb-6">Filmes em Exibição</h1>

<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    @foreach (var filme in Model)
    {
        <div class="bg-white p-4 rounded shadow">
            <h2 class="text-xl font-bold mb-2">@filme.Titulo</h2>
            <p class="text-gray-600">@filme.Sinopse</p>
        </div>
    }
</div>
