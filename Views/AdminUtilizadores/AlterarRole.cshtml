@model Cinema.Models.Utilizador

<h2 class="mb-4">Alterar Role</h2>

<div class="card shadow-sm p-4 w-50">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Utilizador:</label>
            <input class="form-control" value="@Model.Nome" disabled />
        </div>

        <div class="mb-3">
            <label class="form-label">Novo Role:</label>
            <select name="novoRole" class="form-select">
                <option value="Cliente">Cliente</option>
                <option value="Administrador">Administrador</option>
            </select>
        </div>

        <button class="btn btn-dark">Guardar</button>
        <a href="/AdminUtilizadores" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
